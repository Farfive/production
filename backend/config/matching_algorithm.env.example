# Intelligent Matching Algorithm Configuration
# Copy this file to .env and adjust values as needed

# Scoring Weights (must sum to 1.0)
MATCHING_CAPABILITY_WEIGHT=0.80
MATCHING_GEOGRAPHIC_WEIGHT=0.15
MATCHING_PERFORMANCE_WEIGHT=0.05

# Fuzzy Matching Settings
FUZZY_MATCH_THRESHOLD=70
MIN_MATCH_SCORE=0.1

# Geographic Settings
MAX_DISTANCE_KM=1000
LOCAL_RADIUS_KM=50

# Performance Optimization
ENABLE_MATCHING_CACHE=true
CACHE_TTL_MINUTES=30

# Algorithm Tuning
ALGORITHM_VERSION=1.0
AB_TEST_ENABLED=false
DEFAULT_AB_TEST_GROUP=control

# Fallback Strategy Settings
ENABLE_FALLBACK_STRATEGIES=true
FALLBACK_MIN_SCORE=0.05
FALLBACK_MAX_DISTANCE_KM=2000

# Logging Configuration
MATCHING_LOG_LEVEL=INFO
MATCHING_LOG_FILE=logs/matching_algorithm.log
ENABLE_PERFORMANCE_LOGGING=true
ENABLE_AB_TEST_LOGGING=true

# Database Optimization
MATCHING_QUERY_TIMEOUT_SECONDS=30
MAX_MANUFACTURERS_PER_QUERY=1000
ENABLE_QUERY_CACHING=true

# Business Rules
MIN_MANUFACTURER_RATING=0.0
REQUIRE_STRIPE_ONBOARDING=true
REQUIRE_VERIFICATION=true
MAX_CAPACITY_UTILIZATION=95

# A/B Testing Configuration
AB_TEST_GROUPS=control,test_a,test_b
AB_TEST_TRAFFIC_SPLIT=33,33,34

# Feature Flags
ENABLE_DISTANCE_CALCULATION=true
ENABLE_LEAD_TIME_FILTERING=true
ENABLE_CAPACITY_FILTERING=true
ENABLE_CERTIFICATION_MATCHING=true
ENABLE_RISK_ASSESSMENT=true 